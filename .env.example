# Database (matches docker-compose.yml)
DATABASE_URL="postgresql://gadgetswap:gadgetswap_local_dev@localhost:5432/gadgetswap"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Stripe
STRIPE_PUBLISHABLE_KEY="pk_test_your-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-publishable-key"

# Stripe Subscription Price IDs
# To set up:
# 1. Go to Stripe Dashboard > Products > Add Product
# 2. Create "Plus" product with $4.99/month and $40/year prices
# 3. Create "Pro" product with $11.99/month and $100/year prices
# 4. Copy each price ID (starts with price_1...) below
STRIPE_PLUS_MONTHLY_PRICE_ID="price_1..."
STRIPE_PLUS_YEARLY_PRICE_ID="price_1..."
STRIPE_PRO_MONTHLY_PRICE_ID="price_1..."
STRIPE_PRO_YEARLY_PRICE_ID="price_1..."

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="GadgetSwap"

# Transaction fee percentage (e.g., 1 = 1% platform fee)
TRANSACTION_FEE_PERCENT="1"

# Cron job secret (for /api/cron/* endpoints)
CRON_SECRET="your-random-secret-here"

# Carrier Tracking APIs (for auto-delivery confirmation)
# UPS: https://developer.ups.com/
UPS_CLIENT_ID=""
UPS_CLIENT_SECRET=""

# FedEx: https://developer.fedex.com/
FEDEX_CLIENT_ID=""
FEDEX_CLIENT_SECRET=""

# USPS: https://www.usps.com/business/web-tools-apis/
USPS_USER_ID=""

# IMEI Verification: https://dhru.checkimei.com
IMEICHECK_API_KEY=""
